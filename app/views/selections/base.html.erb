
<main>
  <h2 class="center white-text">Recrmcqsuitments</h2>
  <div class="green-text center"><%= flash[:success] %></div>
  <div class="red-text center"><%= flash[:error] %></div>
  <div class="container">

    <%= link_to "Logout", '\logout' ,{ :class => "waves-effect waves-light btn-flat red right white-text"} %>

    <div class="card z-depth-3">
      <div class="container">

        <div class="row">
          <div class="col s12 l12 m12"><h5>Choose the field which fascinates you!</h5></div>
          <div class="col s10 m10 l4 offset-s1 offset-m1 center"><%= link_to_unless @answer.attribute_present?(:id), image_tag("merged_mgt.png", size: "200"),
                                                                                    selections_management_path%><p class="grey-text">Management</p></div>
          <div class="col s10 m10 l4 offset-s1 offset-m1 center"><%= link_to_unless @user.attribute_present?(:portfolio), image_tag("merged_design.png", size: "200"),
                                                                                    selections_design_path%><p class="grey-text">Design</p></div>
          <div class="col s10 m10 l4 offset-s1 offset-m1 center"><%= link_to_unless @user.attribute_present?(:repository), image_tag("merged_tech.png", size: "200"),
                                                                                    selections_technical_path%><p class="grey-text">Technical</p></div>

        </div>
      </div>
    </div>
  </div>
</main>
